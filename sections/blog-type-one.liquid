<style>
    .blog-type-one-media-text {
        position: absolute;
        width: 100%;
        overflow: hidden;
        background: #0f0f0f;
        min-height: 750px;
    }
    .blog-type-one-spacer {
	min-height: 750px;
}
.background-media-text__container {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
}
.image-fit {
	position: relative;
	width: 100%;
	height: 100%;
	object-fit: cover;
	font-family: "object-fit: cover";
	z-index: 1;
}
.background-media-text__inner {
	position: absolute;
	z-index: 1;
	width: 100%;
}
.background-media-text__aligner {
	margin: 60px;
}
.background-media-text__text {
	text-align: left;
	font-size: 1.1em;
	background: #fff;
	padding: 30px;
	width: 380px;
}
     
</style>
 
 
 <div class="blog-type-one-section">
     <div class="blog-type-one-media-text">
         <div class="background-media-text__container">
                <img src="{{ section.settings.blog_image | img_url: 'master' }}" alt="" class="image-fit">
         </div>
         <div class="background-media-text__inner">
                <div class="background-media-text__aligner background-media-text--left">
                    <div class="background-media-text__text">
                        <p class="h3">{{section.settings.blog_title}}</p>
                        <div class="rte background-media-text__subtext">
                            <p>{{section.settings.blog_des}}</p>
                        </div>
                        <a href="{{section.settings.blog_btn_link}}" class="btn">
                            {{section.settings.blog_button_text}}  
                        </a>
                    </div>
                </div>
         </div>
     </div>
     <div class="blog-type-one-spacer"> 
       <div class="page-width">
         <div class="vertical-bottom">
           <h2>{{section.settings.hero_title}}</h2> 
           <p class="hero__subtitle">{{section.settings.hero_des}}</p> 
           <div class="hero__link">
               <a href="{{section.settings.hero_btn_link}}" class="btn">{{section.settings.hero_button_text}}</a>
           </div>
         </div>
       </div>
     </div>
 </div>
 
 
 {% schema %}
   {
     "name": "Blog Type One Section",
     "settings": [
         {
         "type": "image_picker",
         "id": "blog_image",
         "label": "Blog Image"
       },
       {
         "type": "text",
         "id": "blog_title",
         "label": "Blog title",
           "default": "AUTUMN WARDROBE OVERHAUL CHALLENGE"
       },
       {
         "type": "textarea",
         "id": "blog_des",
         "label": "Blog Description",
         "default": "Have you got that back-to-school feeling? It's time to give your wardrobe a shake-up with our easy 7 steps challenge."
       },
       {
         "type": "text",
         "id": "blog_button_text",
         "label": "Blog Button Text",
         "default": "READ MORE"
       },
       {
         "type": "url",
         "id": "blog_btn_link",
         "label": "Blog Button Link"
       }
     ],
     "presets":[
          {
            "category": "blog",
            "name": "Blog Type One Section"
          }
     ]
   }
 {% endschema %}
 